<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
        Horizontal LinearLayout that contains three buttons:
        - Export CSV
        - Export PDF
        - Back to Predictor
        Positioned at the top of the screen using ConstraintLayout constraints.
    -->
    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Button to export data in CSV format -->
        <Button
            android:id="@+id/btnExportCSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export CSV"
            android:layout_marginEnd="8dp"/>

        <!-- Button to export data in PDF format -->
        <Button
            android:id="@+id/btnExportPDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export PDF"
            android:layout_marginEnd="8dp"/>

        <!-- Button to return to the prediction input screen -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Predictor" />
    </LinearLayout>

    <!--
        RecyclerView to display a list of prediction summaries.
        Positioned below the button bar and expands to fill the remaining space.
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/buttonBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
